{{!< default}}
<!--====================BEGIN CONTRIBUTORS==============-->
<style type="text/css">
	
	#menu-toggle i img {
    -webkit-filter: brightness(0%);
    filter: brightness(0%);
	}

</style>
<div class="white banner"></div>

<div class="col-sm-12" id="contributors">
		<div class="row" id="intro">

			<h1>Contributors</h1>
			{{{intro.html}}}
			
		</div>
			
		<div class="row center">
			<h1>Editors</h1>

			<section class="buffer" id="pis">
				

				{{#each pis}}
					<div class="col-lg-6 col-sm-12 pi white">
						<img src="{{cloudinaryUrl photo width=190 height=190 }}" />
						<h2>{{name.first}} {{name.last}}</h2>
						<div class="bio tk-ltc-bodoni-175">{{{bio.html}}}</div>
						
						{{#if website}}
							<div class="website"><i class="fa fa-globe"></i><a href="{{website}}">{{urlPurty website}}</a></div>
						{{/if}}
						{{#if twitter}}
							<div class="twitter"><i class="fa fa-twitter"></i><a href="https://www.twitter.com/{{twitter}}">@{{twitter}}</a></div>
						{{/if}}
					</div>
				{{/each}}
			</section>
			
		</div>

		<div>
			<div id="border">&nbsp;</div>
		</div>
			
		<div class="row clear center">
			<h1>Contributors</h1>

			<section class="buffer" id="pis">
				
				{{#each contributors}}
					<div class="col-lg-6 col-sm-12 contributor white">
						<h2>{{name.first}} {{name.last}}</h2>
						<div class="bio tk-ltc-bodoni-175">{{{bio.html}}}</div>
						<div class="website"><i class="fa fa-globe"></i><a href="{{website}}">{{urlPurty website}}</a></div>
					</div>
				{{/each}}

			</section>
			
		</div> 

</div>